<% include ../partials/header %>

<section class="reset d-flex justify-content-center align-items-center mt-3 h-100 ">
    <form style="width: 30%" method="post" action="/reset/<%=token%>">
        <label>Reset Password</label>
        <div class="form-group">
            <label>New Password</label>
            <input  class="form-control" type="password" placeholder="New Password" name="password"></div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input  class="form-control" type="password" placeholder="Confirm Password" name="confirm"></div>
        <button class="btn btn-lg btn-info btn-block">Reset Password</button>
        <a href="/index">Go back</a>
    </form>
</section>
<% include ../partials/footer %>