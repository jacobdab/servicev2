<% include ../../partials/header%>


<section class="addDevice d-flex justify-content-center align-items-center mt-3 h-100 ">
    <div class="form-box ">
        <form method="post" action="/service/devices/<%=device._id%>/addResult?_method=PUT">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <input type="number" class="form-control" name="price" placeholder='Price for repair' value="<%=device.price%>">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="result" placeholder='Type in result' value="<%=device.result%>">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="costOfRepair" placeholder='Cost of repair' value="<%=device.costOfRepair%>">
                    </div>
                    <button type="submit" class="btn btn-primary">Add Result</button>
                </div>
            </div>
        </form>
    </div>
</section>



<% include ../../partials/footer%>