<% include partials/headersite%>

<section class="serviceCheck d-flex justify-content-center mt-5 h-100">
    <div class="container mt-5">
        <form method="post" action="/search">
            <div class="row">
                <div class="col-lg-4 offset-3">
                    <h3 class="text-center">Sprawdź naprawę</h3>
                    <div class="form-group">
                        <input type="text" class="form-control" name="search" aria-describedby="searchHelp" placeholder='id naprawy'>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Szukaj</button>
                </div>
            </div>
            <div class="row justify-content-center d-flex">
                <div class="col-lg-4 mx-1 ">
                    <%if(search != ''){%>
                    <div class="info ">
                        <div class="row mt-3">
                            <div class="col-lg-6 border px-1">
                                <p class="justify-content-end d-flex">Numer</p>
                            </div> <div class="col-lg-6 border px-1">
                                <%search.forEach(searchE=>{%>
                                    <span> <%= searchE.model%></span>
                            </div>
                            <div class="col-lg-6 border px-1">
                                <p class="justify-content-end d-flex">Producent</p></div>
                            <div class="col-lg-6 border px-1">
                                <span>  <%= searchE.manufacturer%></span>
                            </div>
                            <div class="col-lg-6 border px-1">
                                <p class="justify-content-end d-flex">Model</p></div>
                            <div class="col-lg-6 border px-1">
                                <span>  <%= searchE.model%></span>
                            </div>
                            <div class="col-lg-6 border px-1">
                                <p class="justify-content-end d-flex">Numer Seryjny/IMEI</p></div>
                            <div class="col-lg-6 border px-1">
                                <span>  <%= searchE.imei%></span>
                            </div>
                            <div class="col-lg-6 border px-1">
                                <p class="justify-content-end d-flex">Naprawa gwarancyjna</p></div>
                            <div class="col-lg-6 border px-1">
                                <span>  <%= searchE.warranty%></span>
                            </div>
                            <div class="col-lg-6 border px-1">
                                <p class="justify-content-end d-flex">Sposób odbioru</p></div>
                            <div class="col-lg-6 border px-1">
                                <span>  <%= searchE.delivery%></span>
                            </div>
                            <div class="col-lg-6 border px-1">
                                <p class="justify-content-end d-flex">Find My Iphone</p></div>
                            <div class="col-lg-6 border px-1">
                                <span>  <%= searchE.findMyiPhone%></span>
                            </div>
                            <div class="col-lg-6 border px-1">
                                <p class="justify-content-end d-flex">Stan wizualny</p></div>
                            <div class="col-lg-6 border px-1">
                                <span>  <%= searchE.condition%></span>
                            </div>
                            <div class="col-lg-6 border px-1">
                                <p class="justify-content-end d-flex">Ważne dane</p></div>
                            <div class="col-lg-6 border px-1">
                                <span>  <%= searchE.data%></span>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="row mt-3 mx-1">
                        <div class="col-lg-12 border px-1">
                            <p class="text-center">Koszt naprawy</p></div>
                        <div class="col-lg-6 border px-1">
                            <p class="text-center">Do zapłaty</p></div>
                        <div class="col-lg-6 border px-1">
                            <p class="text-center"><%searchE.price%></p></div>
                    </div>
                    <div class="row mt-3 mx-1">
                        <div class="col-lg-12 border">Stan naprawy</div>
                        <div class="col-lg-6 border">Status</div>
                        <div class="col-lg-6 border"><%=searchE.status%></div>
                        <div class="col-lg-12 border py-1">  <div class="container-fluid px-0">
                                <div class="progress" title="Pozostało <%=moment(searchE.created).add(14,'day').fromNow()%>. Wykorzystano <%=Math.floor(progress[0])%>% dostępnego czasu ">
                                    <%if(progress[0]<25){%>
                                    <div class="progress-bar bg-success" data-toggle="tooltip" data-container="body" tooltip="tooltip1" tooltip-placement="top"  role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:<%=progress[0]%>%">
                                    </div>
                                    <%}else if(progress[0]>50){%>
                                    <div class="progress-bar bg-info"  role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:<%=progress[0]%>%">
                                    </div>
                                    <%}else if(progress[0]>75){%>
                                    <div class="progress-bar bg-warning"  role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:<%=progress[0]%>%">
                                    </div>
                                    <%}else{%>
                                    <div class="progress-bar bg-danger"  role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:<%=progress[0]%>%">
                                    </div>
                                    <% }%>
                                </div>
                            </div></div>
                    </div>
                    <div class="row mt-3 mx-1">
                        <div class="col-lg-12 border"><div class="info"><h6>Problem</h6><div><%=searchE.repair%></div></div></div>
                    </div>
                </div>
            </div>
            <% })%>
            <%}%>
        </form>


    </div>
</section>
<% include partials/footer%>